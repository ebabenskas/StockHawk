<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/error"
        android:layout_marginStart="@dimen/add_dialog_error_margin"
        android:layout_marginEnd="@dimen/add_dialog_error_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textSize="@dimen/add_dialog_error_text_size"
        android:textColor="@color/colorAccent"/>

    <EditText
        android:id="@+id/dialog_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/add_dialog_input_margin_4dp"
        android:layout_marginStart="@dimen/add_dialog_input_margin_4dp"
        android:layout_marginEnd="@dimen/add_dialog_input_margin_4dp"
        android:layout_marginTop="@dimen/add_dialog_input_margin_16dp"
        android:hint="@string/dialog_hint"
        android:inputType="textCapCharacters" />

</LinearLayout>
